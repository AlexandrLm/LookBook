<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9D0D3"
    android:onClick="checkSeason"
    android:padding="0sp"
    android:paddingHorizontal="0sp"
    android:paddingVertical="0sp"
    android:paddingTop="0sp"
    android:paddingBottom="0sp"
    android:textAlignment="center"
    tools:context=".TestActivity">

    <TextView
        android:id="@+id/genderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/oswald_light"
        android:text="укажи свой пол"
        android:textColor="#3C3535"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/genderF"
        android:layout_width="94sp"
        android:layout_height="48sp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/testButton"
        android:fontFamily="@font/oswald_light"
        android:gravity="center_vertical|center_horizontal"
        android:insetTop="0sp"
        android:insetBottom="0dp"
        android:lineSpacingExtra="0sp"
        android:onClick="checkGender"
        android:padding="0dp"
        android:paddingTop="0dp"
        android:text="@string/genderF"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genderText" />

    <Button
        android:id="@+id/genderM"
        android:layout_width="94sp"
        android:layout_height="48sp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="37dp"
        android:backgroundTint="@color/testButton"
        android:backgroundTintMode="src_over"
        android:checkable="false"
        android:fontFamily="@font/oswald_light"
        android:gravity="center_vertical|center_horizontal"
        android:insetTop="0sp"
        android:insetBottom="0dp"
        android:lineSpacingExtra="0sp"
        android:onClick="checkGender"
        android:padding="0dp"
        android:paddingTop="0dp"
        android:text="@string/genderM"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genderText" />

    <TextView
        android:id="@+id/whereGoing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/oswald_light"
        android:text="куда собираешься?"
        android:textColor="#3C3535"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="410dp"
        android:layout_height="110dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genderF">

        <Button
            android:id="@+id/theatrBtn"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/testButton"
            android:fontFamily="@font/oswald_light"
            android:onClick="checkWhereGoing"
            android:padding="0dp"
            android:text="театр"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/schoolBtn"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:layout_marginTop="2dp"
            android:backgroundTint="@color/testButton"
            android:fontFamily="@font/oswald_light"
            android:onClick="checkWhereGoing"
            android:padding="0dp"
            android:text="учеба"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/cityBtn"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/testButton"
            android:fontFamily="@font/oswald_light"
            android:onClick="checkWhereGoing"
            android:padding="0dp"
            android:text="выход в город"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:fontFamily="@font/oswald_light"
        android:text="какое время года?"
        android:textColor="#3C3535"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/springBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <Button
        android:id="@+id/SummerBtn"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/testButton"
        android:fontFamily="@font/oswald_light"
        android:onClick="checkSeason"
        android:padding="0dp"
        android:text="лето"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/springBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/springBtn"
        android:layout_width="178dp"
        android:layout_height="48dp"
        android:layout_marginBottom="296dp"
        android:backgroundTint="@color/testButton"
        android:fontFamily="@font/oswald_light"
        android:onClick="checkSeason"
        android:padding="0dp"
        android:text="весна-осень"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/winterBtn"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/testButton"
        android:fontFamily="@font/oswald_light"
        android:onClick="checkSeason"
        android:padding="0dp"
        android:text="зима"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/springBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/searchBtn"
        android:layout_width="224dp"
        android:layout_height="64dp"
        android:layout_marginBottom="112dp"
        android:backgroundTint="@color/testButton"
        android:fontFamily="@font/oswald_light"
        android:onClick="search"
        android:padding="0dp"
        android:paddingTop="0dp"
        android:text="найти"
        android:textSize="42sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>