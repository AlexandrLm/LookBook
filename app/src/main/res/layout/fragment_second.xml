<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/testBackground"
    tools:context=".SecondFragment" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/cityBtn"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/button_selector"
            android:fontFamily="@font/oswald_light"
            android:onClick="checkWhereGoing"
            android:padding="0dp"
            android:text="выход в город"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/schoolBtn" />

        <Button
            android:id="@+id/theatrBtn"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/button_selector"
            android:fontFamily="@font/oswald_light"
            android:onClick="checkWhereGoing"
            android:padding="0dp"
            android:text="театр"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/schoolBtn" />

        <Button
            android:id="@+id/schoolBtn"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/button_selector"
            android:fontFamily="@font/oswald_light"
            android:onClick="checkWhereGoing"
            android:padding="0dp"
            android:text="учеба"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>